{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"typings",
		"test",
		"dist",
		"**/*spec.ts"
	]
}
