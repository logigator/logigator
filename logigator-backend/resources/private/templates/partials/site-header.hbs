<div class="partial-site-header">
	<div class="partial-site-header__left">
		<div class="partial-site-header__burger-menu">
			<span class="partial-site-header__burger-menu-line"></span>
			<span class="partial-site-header__burger-menu-line"></span>
			<span class="partial-site-header__burger-menu-line"></span>
		</div>

		<a href="{{linkHref '/'}}" class="partial-site-header__logo">
			<img alt="Logigator" src="/assets/logo.svg">
		</a>

		<div class="partial-site-header__links">
			<a href="{{linkHref '/features'}}">{{i18n.SITE_HEADER.FEATURES}}</a>
			<a href="{{linkHref '/community/projects'}}">{{i18n.SITE_HEADER.COMMUNITY}}</a>
			<a href="{{linkHref '/download'}}">{{i18n.SITE_HEADER.DOWNLOAD}}</a>
		</div>
	</div>

	<div class="partial-site-header__right">
		{{#if isAuthenticated }}
			<div class="partial-site-header__links">
				<a href="{{linkHref '/my/projects'}}">{{i18n.SITE_HEADER.PROJECTS}}</a>
				<a href="{{linkHref '/my/components'}}">{{i18n.SITE_HEADER.COMPONENTS}}</a>
			</div>
			<div class="partial-site-header__right-separator"></div>
			<div class="partial-site-header__dropdown-trigger partial-site-header__right-user partial-site-header__right-user--logged-in">
				<p class="partial-site-header__username">{{user.username}}</p>
				<img class="partial-site-header__user-img" alt="User Image" src="{{user.image}}">
			</div>
		{{else}}
			<div class="partial-site-header__right-user">
				<button class="btn-outline secondary partial-site-header__btn-login">{{i18n.SITE_HEADER.LOGIN}}</button>
				<button class="btn-outline secondary partial-site-header__btn-register">{{i18n.SITE_HEADER.REGISTER}}</button>
				<div class="partial-site-header__more partial-site-header__dropdown-trigger"></div>
			</div>
		{{/if}}
		{{> settings-dropdown }}
	</div>
	<div class="partial-site-header__dropdown-background"></div>
</div>

{{#unless isAuthenticated }}
	{{> login-popup }}
	{{> register-popup }}
{{/unless}}

